/**single.wxss**/

@import "../../style/weui.wxss";
@import "../../wxParse/wxParse.wxss";
@import "../../style/wxParse.wxss";
/* 底部评论栏 */

.comment-fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
    z-index: 100;
    /*margin-bottom:2rpx; */
    opacity: 0.8;
}

.iconLine {
    display: flex;
}

.img-menu {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    text-align: center;
}

.icon-box {
    justify-content: space-around;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    display: flex;
    position: relative;
}

.icon-box, .icon-box view {
    overflow: visible;
}

.icon-text {
    display: inline-block;
    text-align: center;
    height: 40rpx;
    font-size: 30rpx;
    margin-left: 10rpx;
    color: #525963;
    align-content: center;
}

.weui-badge {
    position: absolute;
    top: -.7em;
    right: -.8em;
}

.share-button {
    opacity: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    top: 0;
    left: 0;
}

/* 评论的样式 */

.relatedTitle {
    text-align: left;
    font-weight: normal;
    line-height: 40rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    color: #4c4c4c !important;
}

.entry-gap-like {
    width: 120rpx;
    height: 2px;
    background-color: #4c4c4c;
    margin-bottom: 32rpx;
}

.commentheader {
    padding: 20rpx 0;
    text-align: left;
    font-weight: normal;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #959595;
}

.gravatarImg {
    /* margin-top: 4px; */
    border-radius: 50%;
    /*
    opacity: 1;
    transform: scale(1);
    perspective-origin: top center;
    transition: all ease-in-out 0.3s;
    */
    height: 48rpx;
    width: 48rpx;
}

.comment {
    /* border-bottom: 8px solid #fff; */
    background-color: #f5f7f7;
    padding: 5rpx 24rpx;
    border-radius: 8px;
    margin: 8px 0;
}

.comment-user {
    display: flex;
    align-items: center;
    /* height: 80rpx; */
    font-size: 28rpx;
    /* line-height: 80rpx; */
    font-weight: normal;
    outline: none;
    color: #959595;
    margin: 10rpx 0;
}

.replay-user {
    display: flex;
    align-items: center;
    /* height: 80rpx; */
    font-size: 26rpx;
    /* line-height: 80rpx; */
    font-weight: normal;
    outline: none;
    color: #959595;
    margin: 10rpx 0;
    margin-left: 60rpx;
}

.comment-user image {
    margin-right: 16rpx;
}

.comment-date {
    font-size: 25rpx;
    line-height: 1.2;
    font-weight: normal;
    outline: none;
    margin-bottom: 30rpx;
    color: #959595;
}

/* 回复内容 */

.comment-summary {
    color: #4c4c4c;
    font-size: 28rpx;
    line-height: 1rem;
    margin-bottom: 10rpx;
    margin-left: 60rpx;
}

/* 加载更多 */

.no-more, .more-comment {
    font-size: 30rpx;
    color: rgba(30, 20, 20, 0.8);
    line-height: 1.8rem;
    margin-bottom: 55rpx;
    text-align: center;
    margin-top: 10rpx;
}

/* 滚动视图 */

.scroll {
    height: 100%;
}

page {
    height: 100%;
    position: relative;
}

/* 评论输入框以及蒙层 */

.menuBackground {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: transparent;
    z-index: 99;
}

.input-fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #EDEEF0;
    box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
    z-index: 100;
    /*margin-bottom:2rpx; */
}

.comment-box {
    padding: 16rpx 4rpx;
    display: flex;
    /* justify-content: center; */
    /* align-items: center; */
    flex-direction: column;
}

.comment-form {
    display: flex;
    justify-content: center;
}

.info {
    padding: 5px 15px;
}

.info-body {
    font-size: 12px;
    color: #4F565F;
}

.comment-button {
    width: 160rpx;
    display: flex !important;
    flex-direction: column;
    justify-content: center;
    margin-right: 22rpx;
    /* border-bottom-left-radius: 0;
    border-top-left-radius: 0;
    border-top-right-radius: 6px !important;
    border-bottom-right-radius: 6px !important; */
    border-radius: 6px;
    text-align: center;
    padding: 0 2px !important;
    font-size: 12px;
    background-color: #1AAD19;
    color: #fff;
    /* border: none;
    border-radius: 0; */
}

.comment-button::after {
    border: none;
}

.comment-input {
    background-color: #fff;
    padding: 2px 3px 2px 10px;
    margin-left: 15px;
    font-size: 14px;
    height: 25px;
    max-height: 25px;
    min-height: 30px;
    width: 61%;
    text-align: left;
    border-radius: 6px;
    /* border: 1px solid #296fd0; */
    /* border-bottom-left-radius: 6px;
    border-top-left-radius: 6px;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0; */
}